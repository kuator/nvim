{
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",    
      "?/lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",        
      "$LLS_Addons/luvit",  
      "$XDG_DATA_HOME/nvim/site/pack/core/opt"   
    ],
    "ignoreGlobs": ["**/*_spec.lua"]
  }
}
